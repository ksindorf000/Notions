@model Notions.Models.BlogPost

@{ var imgSrc = Html.DisplayTextFor(model => model.ImgUrl); }

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header text-center" style="background-image: url('@imgSrc')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading text-box">
                    <h1>@Html.DisplayFor(model => model.Title)</h1>
                    <h2 class="subheading">@Html.DisplayFor(model => model.TeaserText)</h2>
                    <span class="meta">Posted by @Html.DisplayFor(model => model.Author) on @Html.DisplayFor(model => model.Created)</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <p>
                    @Html.DisplayFor(model => model.Body)
                </p>
                <p>
                    <a href="@Url.Action("Edit", "BlogPost", new { id = Model.Id })"  class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Index", "BlogPost")" class="btn btn-default"><span class="glyphicon glyphicon-list"></span></a>
                </p>
            </div>
        </div>
    </div>
</article>
